{
  "name": "arx",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "format": "biome format --write",
    "lint": "pnpm exec biome lint --write",
    "check": "biome check --write",
    "build": "turbo build",
    "build:chrome": "pnpm --filter @arx/extension build:chrome",
    "build:firefox": "pnpm --filter @arx/extension build:firefox",
    "dev": "turbo dev",
    "dev:chrome": "pnpm --filter @arx/extension dev:chrome",
    "dev:firefox": "pnpm --filter @arx/extension dev:firefox",
    "zip": "pnpm --filter @arx/extension zip",
    "test": "turbo test"
  },
  "devDependencies": {
    "turbo": "2.5.6",
    "@biomejs/biome": "2.2.2",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "author": "",
  "license": "MIT"
}
